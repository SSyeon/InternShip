<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="145dp"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        app:srcCompat="@drawable/ic_signin_logo" />

    <ImageView
        android:id="@+id/logotype"
        android:layout_width="250dp"
        android:layout_height="85dp"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-55dp"
        app:srcCompat="@drawable/ic_signin_logotype" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_above="@+id/passwordBox"
        android:layout_alignStart="@+id/emailBox"
        android:layout_alignTop="@+id/emailBox"
        android:layout_alignEnd="@+id/emailBox"
        android:layout_marginStart="40dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="17dp"
        android:background="@null"
        android:hint="이메일"
        android:textColorLink="#5a4dab" />


    <ImageView
        android:id="@+id/emailBox"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/logotype"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_signin_emailbox" />

    <ImageView
        android:id="@+id/passwordBox"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginTop="-15dp"
        android:layout_below="@+id/emailBox"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_signin_emailbox" />

    <ImageButton
        android:id="@+id/loginBtn"
        android:layout_width="385dp"
        android:layout_height="75dp"
        android:layout_below="@+id/passwordBox"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_signin_signinbtn" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_above="@+id/loginBtn"
        android:layout_below="@+id/emailBox"
        android:layout_alignStart="@+id/emailBox"
        android:layout_alignEnd="@+id/emailBox"
        android:layout_marginStart="40dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="17dp"
        android:background="@null"
        android:ems="16"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:textColorLink="#5a4dab" />


</RelativeLayout>