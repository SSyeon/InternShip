<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".WriteActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanscjkkr_demilight"
            android:text="취소"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:textColor="@color/colorMain"
            android:textSize="15sp"/>


        <TextView
            android:id="@+id/Write"
            android:layout_marginLeft="170dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanscjkkr_demilight"
            android:text="글쓰기"
            android:gravity="center"
            android:textColor="@color/colorMain"
            android:textSize="24sp"  />

    </RelativeLayout>

    <TextView
        android:id="@+id/cityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:background="@drawable/rect_drawable"
        android:fontFamily="@font/notosanscjkkr_demilight"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:text="서울"
        android:textColor="#000000"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/titleBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="#B9B9B9"
        android:ems="10"
        android:fontFamily="@font/notosanscjkkr_demilight"
        android:hint="제목"
        android:textColor="#B9B9B9"
        android:textSize="14sp"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/contentBox"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_border"
        android:ems="10"
        android:fontFamily="@font/notosanscjkkr_demilight"
        android:gravity="start"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:scrollHorizontally="false"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageButton
            android:id="@+id/inputimage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:layout_margin="10dp"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/ic_writing_imgicon" />

        <TextView
            android:id="@+id/post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:fontFamily="@font/notosanscjkkr_demilight"
            android:text="게시하기"
            android:layout_marginLeft="260dp"
            android:textColor="@color/colorYellow"
            android:textSize="20sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/showpicture"
        android:layout_width="131dp"
        android:layout_height="126dp"
        app:srcCompat="@drawable/ic_writing_writingbox" />

</LinearLayout>